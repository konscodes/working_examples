{
    "version": 1,
    "formatters": {
        "simple": {
            "format": "[%(levelname)s] %(asctime)s: %(message)s",
            "datefmt": "%Y/%m/%d %H:%M:%S"
        },
        "extended": {
            "format": "[%(levelname)s] by %(name)s at %(asctime)s: %(message)s",
            "datefmt": "%Y/%m/%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "extended",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "class": "logging.FileHandler",
            "formatter": "extended",
            "filename": "./files/logger.log"
        }
    },
    "loggers": {
        "AppLogger": {
            "level": "DEBUG",
            "handlers": ["file"]
        }
    },
    "root": {
        "handlers": ["console"]
    }
}